################################################################
#
# 	Makefile for Graphics test
#
################################################################

################################################################
#	A rule to make sub directories.
################################################################

SRC_DIR 		= ../..

GRAPHICS_DIR	= GRSimple

all:
	@for dir in $(GRAPHICS_DIR); \
	do echo "---------------------------------------------"; \
	   echo "             make $$dir    			      "; \
	   echo "---------------------------------------------"; \
	$(MAKE) -C $$dir all || exit; \
	done


################################################################
#	Default rules
################################################################

clean:
	@for dir in $(GRAPHICS_DIR); \
	do $(MAKE) -C $$dir  clean || exit; \
	done
	
realclean:
	@for dir in $(GRAPHICS_DIR); \
	do $(MAKE) -C $$dir  realclean || exit; \
	done 


################################################################
# 	THE END
################################################################
