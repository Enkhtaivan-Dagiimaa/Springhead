################################################################
#
# 	Makefile for Physics test
#
################################################################

################################################################
#	A rule to make sub directories.
################################################################

SRC_DIR 	= ../..

SUB_DIRS	= PHConstraintTest \
				PHShape \
				PHShapeGL \
				PHSimple \
				PHSimpleGL

all:
	@for dir in $(SUB_DIRS); \
	do echo "---------------------------------------------"; \
	   echo "             make $$dir    			      "; \
	   echo "---------------------------------------------"; \
	$(MAKE) -C $$dir all || exit; \
	done


################################################################
#	Default rules
################################################################

clean:
	@for dir in $(SUB_DIRS); \
	do $(MAKE) -C $$dir  clean || exit; \
	done
	
realclean:
	@for dir in $(SUB_DIRS); \
	do $(MAKE) -C $$dir  realclean || exit; \
	done 


################################################################
# 	THE END
################################################################
