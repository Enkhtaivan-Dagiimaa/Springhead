#####################################################################
#
# 	The make.header file is more complex than the Makefile.
#
#####################################################################

#####################################################################
#	User Defined
#####################################################################
# -DDEBUG / -DNDEBUG
DEBUG_FLAG	= -DDEBUG # -D_DEBUG


#####################################################################
#	Macros
#####################################################################

CXX				= g++
AR				= ar
RANLIB			= ranlib
RM				= rm -rf

# ----------------------------------------------------------
#	Cygwin
# ----------------------------------------------------------
ifeq ($(findstring CYGWIN, $(shell /bin/uname)), CYGWIN)
MOCO 	= /moco/masa
LDFLAGS.EXTRA 	=	
LDFLAGS.GL 		= -lglut32 -lglu32 -lopengl32 -lm
INCLUDES 		= -I/usr/include \
					-I/usr/local/include
endif

# ----------------------------------------------------------
# 	Linux
# ----------------------------------------------------------
ifeq ($(findstring Linux, $(shell /bin/uname)), Linux)
LDFLAGS.EXTRA 	=	-L/usr/X11R6/lib	
LDFLAGS.GL		= -lX11 -lXi -lXmu -lglut -lGLU -lGL -lm
INCLUDES 		= -I/usr/X11R6/include/
endif				

# ----------------------------------------------------------
# 	common rules
# ----------------------------------------------------------					
CXXFLAGS 		= -Wall -O2 $(DEBUG_FLAG)
LDFLAGS 		= $(LDFLAGS.EXTRA) \
					$(LDFLAGS.GL) \
					-L$(TOP_DIR)/src/Base/ \
					-L$(TOP_DIR)/src/Collision/ \
					-L$(TOP_DIR)/src/Foundation/ \
					-L$(TOP_DIR)/src/Physics/ \
					-L$(TOP_DIR)/src/Graphics/ \
					-L$(TOP_DIR)/src/FileIO/ \
					-lBase -lCollision -lFoundation -lPhysics -lGraphics -lFileIO \
					-lBase -lCollision -lFoundation -lPhysics -lGraphics -lFileIO \
					$(LDFLAGS.EXTRA) \
					$(LDFLAGS.GL)
					
INCLUDES		+= -I$(TOP_DIR)/include -I$(TOP_DIR)/src -I.


#####################################################################
# 	THE END
#####################################################################

